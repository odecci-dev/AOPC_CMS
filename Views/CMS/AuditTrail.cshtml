@section Scripts {
    <script>
        i_id = 0;
        var prev = 0;
        var next = 0;
        var spanval = "";
        var currpage = "";
        var data = {};
        $(document).ready(function () {
            getAuditTrail();
        });
        function getAuditTrail() {
            new DataTable('#audittrails-table', {
                ajax: {
                    url: '@Url.Action("GetAuditTrailList", "CMS")',
                    type: "GET",
                    dataType: "json",
                    processing: true,
                    serverSide: true,
                    complete: function (xhr) {
                        // console.log(xhr);
                    },
                    error: function (err) {
                        alert(err.responseText);
                    }
                },
                columns: [
                    {
                        data: 'employeeID'
                    },
                    {
                        data: 'fullName'
                    },
                    {
                        data: 'actions'
                    },
                    {
                        data: 'module'
                    },
                    {
                        data: 'positionName'
                    },
                    {
                        data: 'corporateName'
                    },
                    {
                        data: 'userType'
                    },
                    {
                        data: 'dateCreated'
                    }
                ]
            });
        }
    </script>
}

