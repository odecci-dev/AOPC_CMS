        @section Scripts{
        <script>
          i_id=0;
            $(document).ready(function () {
               
               audittrailtable = $('#audittrail-table').DataTable({
                    columnDefs : [
                    { type: 'time-date-sort', 
                    targets: [7],
                    } ],
                    order: [[ 7, "desc" ]],
                    "bPaginate": false,
                    "bFilter": false,
                    "stripeClasses": [],
                    "ordering": false,
                    "ordering": false,
                    "info": false,
                    "bInfo": false,
                    "bAutoWidth": false,
                    "bLengthChange": false, 
                     "paging": true,
                      "aLengthMenu": [30],
                      "searching": true,
                    "oLanguage": { "sZeroRecords": "", "sEmptyTable": ""
                }});
               ShowAuditTrail();
            });
 function ShowAuditTrail() {
   $.blockUI(reloadLoading);
            setTimeout(function () {
